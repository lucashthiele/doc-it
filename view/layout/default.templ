package layout

type DefaultLayoutProperties struct{
  PageTitle string
}

templ DefaultLayout(props DefaultLayoutProperties) {
  <!DOCTYPE html>
  <html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="https://unpkg.com/htmx.org@2.0.4"></script>
    
    <title>{ props.PageTitle }</title>
  </head>
  <body>
    { children... }
  </body>
  </html>
}